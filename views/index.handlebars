<h1>Todo List</h1>

<h2>Todos!</h2>

<ul>
  {{#each todos}}
    {{#unless complete}}
      {{> todos/todo-block complete=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Done</h2>

<ul>
  {{#each todos}}
    {{#if complete}}
      {{> todos/todo-block complete=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Todo</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Todo:</label>
    <input type="text" id="ca" name="name">
  </div>

